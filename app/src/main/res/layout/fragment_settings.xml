<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_FFF5F5F5">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="@string/settings"
        app:centerType="textView"
        app:fillStatusBar="true"
        app:layout_constraintTop_toTopOf="parent"
        app:showBottomLine="true"
        app:statusBarColor="@color/_FFFFFFFF"
        app:titleBarColor="@color/_FFFFFFFF" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

</android.support.constraint.ConstraintLayout>