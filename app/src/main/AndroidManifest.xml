<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xyz.creeperdch.testme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TestMeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/test_me"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.2" />

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ShowBigImageActivity"
            android:configChanges="locale|layoutDirection"
            android:theme="@style/TransparentActivity" />
        <activity
            android:name=".activity.LightActivity"
            android:configChanges="locale|layoutDirection" />
        <activity android:name=".activity.CountDownActivity" />
        <activity android:name=".activity.DialogActivity" />
        <activity android:name=".activity.HistoryActivity"></activity>
    </application>

</manifest>